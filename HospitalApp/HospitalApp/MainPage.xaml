<Page x:Class="HospitalApp.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:HospitalApp"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="MainPage"
      FontFamily="Calibri" Background="#F5F5F5">
    <Page.Resources>
        <local:StatusToTextConverter x:Key="StatusToTextConverter"/>
    </Page.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Вкладки -->
        <TabControl x:Name="MainTabControl" Grid.Row="1" Background="White" BorderBrush="#0078D7">
            <!-- Вкладка Лаборанта -->
            <TabItem x:Name="LabTab" Header="Лаборант">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!-- Панель для ввода штрих-кода -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBox x:Name="BarcodeInput" Width="200" Margin="0,0,10,0" Text="{Binding SuggestedBarcode, UpdateSourceTrigger=PropertyChanged}" KeyDown="BarcodeInput_KeyDown"/>
                        <Button x:Name="ScanButton" Content="Сканировать" Width="100" Margin="0,0,10,0" Click="ScanButton_Click" Background="#0078D7" Foreground="White"/>
                        <Button x:Name="ReceiveButton" Content="Получить биоматериалы" Width="150" Click="ReceiveButton_Click" Background="#0078D7" Foreground="White"/>
                    </StackPanel>
                    <!-- Таблицы -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <DataGrid x:Name="PatientsGrid" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,5,0" Grid.Column="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ФИО" Binding="{Binding Full_Name}" Width="*"/>
                                <DataGridTextColumn Header="Дата рождения" Binding="{Binding Birth_Date, StringFormat=dd.MM.yyyy}" Width="Auto"/>
                                <DataGridTextColumn Header="Полис" Binding="{Binding Policy}" Width="Auto"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <DataGrid x:Name="OrdersGrid" AutoGenerateColumns="False" IsReadOnly="True" Margin="5,0,0,0" Grid.Column="1">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Штрих-код" Binding="{Binding BarCode}" Width="Auto"/>
                                <DataGridTextColumn Header="Пациент" Binding="{Binding Pacient.Full_Name}" Width="*"/>
                                <DataGridTextColumn Header="Услуга" Binding="{Binding Service.Title}" Width="*"/>
                                <DataGridTextColumn Header="Дата создания" Binding="{Binding Create_Date, StringFormat=dd.MM.yyyy HH:mm}" Width="Auto"/>
                                <DataGridTextColumn Header="Статус" Width="Auto">
                                    <DataGridTextColumn.Binding>
                                        <MultiBinding Converter="{StaticResource StatusToTextConverter}">
                                            <Binding Path="Order_Status"/>
                                            <Binding Path="Complete_Time"/>
                                        </MultiBinding>
                                    </DataGridTextColumn.Binding>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>
            </TabItem>
            <!-- Вкладка Лаборанта-Исследователя -->
            <TabItem x:Name="ResearcherTab" Header="Лаборант-Исследователь">
                <DataGrid x:Name="ServiceProvidedGrid" AutoGenerateColumns="False" Margin="10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Пользователь" Binding="{Binding User.Full_Name}" Width="*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Услуга" Binding="{Binding Service.Title}" Width="*" IsReadOnly="True"/>
                        <DataGridTemplateColumn Header="Анализатор" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Analyzer_Id}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <ComboBox ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}, Path=DataContext.Analyzers}"
                                              SelectedValue="{Binding Analyzer_Id}"
                                              SelectedValuePath="Analyzer_Id"
                                              DisplayMemberPath="Analyzer_Id"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Дата начала" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Receipt_Date, StringFormat=dd.MM.yyyy}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <DatePicker SelectedDate="{Binding Receipt_Date}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Дата окончания" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Execution_Date, StringFormat=dd.MM.yyyy}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <DatePicker SelectedDate="{Binding Execution_Date}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <!-- Вкладка Администратора -->
            <TabItem x:Name="AdminTab" Header="Администратор">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid x:Name="AdminPatientsGrid" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,5,5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ФИО" Binding="{Binding Full_Name}" Width="*"/>
                            <DataGridTextColumn Header="Дата рождения" Binding="{Binding Birth_Date, StringFormat=dd.MM.yyyy}" Width="Auto"/>
                            <DataGridTextColumn Header="Полис" Binding="{Binding Policy}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <DataGrid x:Name="AdminOrdersGrid" AutoGenerateColumns="False" IsReadOnly="True" Margin="5,0,0,5" Grid.Column="1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Штрих-код" Binding="{Binding BarCode}" Width="Auto"/>
                            <DataGridTextColumn Header="Пациент" Binding="{Binding Pacient.Full_Name}" Width="*"/>
                            <DataGridTextColumn Header="Услуга" Binding="{Binding Service.Title}" Width="*"/>
                            <DataGridTextColumn Header="Дата создания" Binding="{Binding Create_Date, StringFormat=dd.MM.yyyy HH:mm}" Width="Auto"/>
                            <DataGridTextColumn Header="Статус" Width="Auto">
                                <DataGridTextColumn.Binding>
                                    <MultiBinding Converter="{StaticResource StatusToTextConverter}">
                                        <Binding Path="Order_Status"/>
                                        <Binding Path="Complete_Time"/>
                                    </MultiBinding>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <DataGrid x:Name="ServicesGrid" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,5,5,0" Grid.Row="1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="*"/>
                            <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat=C2}" Width="Auto"/>
                            <DataGridTextColumn Header="Срок (дни)" Binding="{Binding Deadline}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <DataGrid x:Name="UsersGrid" AutoGenerateColumns="False" IsReadOnly="True" Margin="5,5,0,0" Grid.Row="1" Grid.Column="1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ФИО" Binding="{Binding Full_Name}" Width="*"/>
                            <DataGridTextColumn Header="Роль" Binding="{Binding Role.Name}" Width="Auto"/>
                            <DataGridTextColumn Header="Логин" Binding="{Binding Login}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <!-- Вкладка Бухгалтера -->
            <TabItem x:Name="AccountantTab" Header="Бухгалтер">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="InsuranceCompaniesGrid" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="*"/>
                            <DataGridTextColumn Header="Адрес" Binding="{Binding Address}" Width="*"/>
                            <DataGridTextColumn Header="ИНН" Binding="{Binding TIN}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <DataGrid x:Name="AccountantPatientsGrid" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,5,0,0" Grid.Row="1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ФИО" Binding="{Binding Full_Name}" Width="*"/>
                            <DataGridTextColumn Header="Полис" Binding="{Binding Policy}" Width="Auto"/>
                            <DataGridTextColumn Header="Страховая компания" Binding="{Binding Insurance_Company.Title}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <!-- Вкладка Отчетов -->
            <TabItem x:Name="ReportsTab" Header="Отчеты">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <ComboBox x:Name="ReportFormatCombo" Width="100" Margin="0,0,10,0" SelectedItem="{Binding SelectedFormat, UpdateSourceTrigger=PropertyChanged}">
                            <ComboBoxItem>Word</ComboBoxItem>
                            <ComboBoxItem>PDF</ComboBoxItem>
                            <ComboBoxItem>Excel</ComboBoxItem>
                        </ComboBox>
                        <CheckBox x:Name="TableFormatCheckBox" Content="Табличный формат" IsChecked="{Binding IsTableFormat}" Margin="0,0,10,0" Visibility="{Binding IsTableFormatVisible}"/>
                        <DatePicker SelectedDate="{Binding StartDate}" Margin="0,0,10,0"/>
                        <DatePicker SelectedDate="{Binding EndDate}" Margin="0,0,10,0"/>
                        <Button Content="Сформировать отчет" Click="GenerateReport_Click" Background="#28A745" Foreground="White"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1">
                        <CheckBox x:Name="AllTablesCheckBox" Content="Все таблицы" IsChecked="{Binding AllTablesSelected, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>
                        <CheckBox x:Name="PatientsTableCheckBox" Content="Пациенты" IsChecked="{Binding PatientsTableSelected, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>
                        <ComboBox x:Name="PatientsRecordsCombo" ItemsSource="{Binding PatientRecords}" DisplayMemberPath="Full_Name" SelectedItem="{Binding SelectedPatientRecord}" Margin="20,0,0,5" Visibility="{Binding PatientsRecordsComboVisible}"/>
                        <CheckBox x:Name="OrdersTableCheckBox" Content="Заказы" IsChecked="{Binding OrdersTableSelected, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>
                        <ComboBox x:Name="OrdersRecordsCombo" ItemsSource="{Binding OrderRecords}" DisplayMemberPath="BarCode" SelectedItem="{Binding SelectedOrderRecord}" Margin="20,0,0,5" Visibility="{Binding OrdersRecordsComboVisible}"/>
                        <CheckBox x:Name="ServicesTableCheckBox" Content="Услуги" IsChecked="{Binding ServicesTableSelected, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>
                        <ComboBox x:Name="ServicesRecordsCombo" ItemsSource="{Binding ServiceRecords}" DisplayMemberPath="Title" SelectedItem="{Binding SelectedServiceRecord}" Margin="20,0,0,5" Visibility="{Binding ServicesRecordsComboVisible}"/>
                        <CheckBox x:Name="UsersTableCheckBox" Content="Пользователи" IsChecked="{Binding UsersTableSelected, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>
                        <ComboBox x:Name="UsersRecordsCombo" ItemsSource="{Binding UserRecords}" DisplayMemberPath="Full_Name" SelectedItem="{Binding SelectedUserRecord}" Margin="20,0,0,5" Visibility="{Binding UsersRecordsComboVisible}"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Кнопки управления (для администратора) -->
        <StackPanel x:Name="AdminButtonsPanel" Orientation="Horizontal" Grid.Row="2" Margin="0,10,0,0" Visibility="{Binding AdminButtonsVisibility}">
            <Button x:Name="AddButton" Content="Добавить" Width="100" Margin="0,0,10,0" Click="AddButton_Click" Background="#0078D7" Foreground="White"/>
            <Button x:Name="EditButton" Content="Изменить" Width="100" Margin="0,0,10,0" Click="EditButton_Click" Background="#0078D7" Foreground="White"/>
            <Button x:Name="DeleteButton" Content="Удалить" Width="100" Click="DeleteButton_Click" Background="#0078D7" Foreground="White"/>
        </StackPanel>
    </Grid>
</Page>