<Window x:Class="HospitalApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalApp"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d" Icon="/Resources/logo.ico" ShowInTaskbar="True"
        Title='АИС "№20"' FontFamily="Calibri" MinHeight="360" MinWidth="750" MaxHeight="500" MaxWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="44"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Name="HeaderGrid" Grid.Row="0" Background="#6EDC82" Visibility="{Binding HeaderVisibility}">
            <TextBlock Text='АИС Поликлиника "№20"' VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,250,0" FontSize="18"/>
            <Image Source="/Resources/logo.png" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="0" Width="40" Margin="5,0,0,0" Panel.ZIndex="10"/>
            <Border CornerRadius="12" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0" Background="#468C50" Width="160" Height="35" Grid.Row="0" Grid.Column="1">
                <Grid Name="ProfileGrid">
                    <Button Name="ProfileBtn" VerticalAlignment="Center" HorizontalAlignment="Left" Width="30" Height="30" Margin="5,0,0,0" Background="Transparent" BorderThickness="0" Click="ProfileBtn_Click">
                        <Image Source="{Binding UserProfileIcon}" Stretch="Fill">
                            <Image.Clip>
                                <EllipseGeometry Center="15,15" RadiusX="15" RadiusY="15"/>
                            </Image.Clip>
                        </Image>
                    </Button>
                    <TextBlock Text="{Binding UserFullName}" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="45,0,0,0" FontSize="12"/>
                    <Button Name="ExitProfileBtn" FontSize="12" Width="25" Height="25" Content="Exit" VerticalAlignment="Center" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0" Foreground="White" Margin="0,0,10,0" Click="ExitBtn_Click"/>
                </Grid>
            </Border>
        </Grid>
        <Frame Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1" Navigated="MainFrame_Navigated"/>
    </Grid>
</Window>